import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
	Scanner s=new Scanner(System.in);
	int n=s.nextInt();
	int choice=s.nextInt();

int sum=0,prod=1;
for(int i=1;i<=n;i++){
sum+=i;
prod*=i;
}

if(choice==1)
System.out.print(sum);
else if(choice==2)
System.out.print(prod);
else
System.out.print(-1);



	}
}
