import java.util.Scanner;
public class Solution {

	public static void main(String[] args) {
Scanner s=new Scanner(System.in);
int n=s.nextInt();
int i=0;

while(i<n){
	int j=0;
	while(j<n+1){
		if(j==i|| j==n)
		System.out.print('*');
		else
		System.out.print(0);
		j++;
	}

   j=0;
   while(j<n){
	   	if( j==n-1-i)
		System.out.print('*');
		else
		System.out.print(0);
		j++;

   }




System.out.println();
i++;
}

		
	}	


}
