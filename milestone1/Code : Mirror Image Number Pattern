import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
		
	Scanner s=new Scanner(System.in);
	int n=s.nextInt();
	int i=0;
	while(i<n){

int space=0;
while(space<n-1-i){
	System.out.print(' ');
	space++;
}




		int j=0;
while(j<=i){
	System.out.print(j+1);
	j++;
}

System.out.println();
i++;
	}

		
	}

}
