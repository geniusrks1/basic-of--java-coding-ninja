public class Solution {

	public static void wavePrint(int mat[][]){
		int r=mat.length;
        if(r==0)
            return;
   
        int c=mat[0].length;
        for(int j=0;j<c;j++){
            for(int i=0;i<r;i++){
                if(j%2==0)
            System.out.print(mat[i][j]+" ");
                else
                    System.out.print(mat[r-i-1][j]+" ");
            }
        }
	}
    }

