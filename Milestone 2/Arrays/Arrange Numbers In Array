public class Solution {
    
    public static void arrange(int[] arr, int n) {
        int x=1;
        int y=n-1;
        if(n%2==0)
         y=n;
         
    	for(int i=0;i<n;i++){
            if(i<(n+1)/2){
              arr[i]=x;
              x+=2;
        }
else{
arr[i]=y;
y-=2;
}

    }}
}
